{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@assets/*": ["src/assets/*"],
            "@types": ["src/types/index.ts"],
            "stories": ["stories/*"]
        },
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts", "./src/**/index.tsx", "./src/**/*.tsx", "./stories/**/*.tsx"]
}
