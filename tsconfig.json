{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "@components/*": ["components/*"],
            "@hooks/*": ["hooks/*"],
            "@assets/*": ["assets/*"],
            "@types": ["types/index.ts"]
        },
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["./src/**/*.ts", "./src/**/index.tsx"]
}
